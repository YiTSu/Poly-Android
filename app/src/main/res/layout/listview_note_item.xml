<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:elevation="1dp">


    <TextView
        android:id="@+id/main_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大家如何本次软微学院的校园移动应用开发大赛"
        android:textColor="@color/colorNotBlack"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/main_image"
        android:layout_toEndOf="@+id/main_image" />

    <TextView
        android:id="@+id/main_tv2"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="李书记"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/rect_blue"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/main_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="众所周知，软微学院是一个注重学生创新和实践的学院，学院高度重视学生实践能力的培养，对这次比赛大家怎么看？"
        android:textColor="@color/colorBetween"
        android:textSize="14sp"
        android:layout_below="@+id/main_tv3"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/main_tv3"
        android:layout_alignStart="@+id/main_tv3"
        android:layout_marginRight="10dp"
        android:maxLength="55"/>

    <TextView
        android:id="@+id/main_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018年12月28日"
        android:textColor="@color/colorBrown"
        android:textSize="12sp"
        android:layout_below="@+id/main_tv4"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/main_tv4"
        android:layout_alignStart="@+id/main_tv4"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/main_tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阅读 400"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/main_tv4"
        android:layout_toLeftOf="@+id/main_tv7"
        />

    <TextView
        android:id="@+id/main_tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回复 150"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/main_tv4"
        android:layout_alignParentRight="true"/>


</RelativeLayout>