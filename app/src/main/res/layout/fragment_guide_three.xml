<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/center_linear"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:src="@drawable/guide_six"
            android:id="@+id/imageView3"
            android:layout_toRightOf="@+id/center_linear"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/img_one"
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:src="@drawable/guide_five"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/center_linear"
            android:layout_toStartOf="@+id/center_linear" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更能依附主题帖发布主题活动！\n\n快来开始你的聚以嬉之旅吧！"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:id="@+id/textView11"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >
        <Button
            android:id="@+id/bt_start"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="立即开始"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/guide_button"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"/>
    </LinearLayout>

