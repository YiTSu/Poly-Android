<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.splashUI.creatAcUI.ActivitiesActivity"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="42"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_one"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/select"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"/>
            <ImageView
                android:id="@+id/im_two"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/select"
                android:layout_gravity="center"
                android:layout_margin="3dp"/>
            <ImageView
                android:id="@+id/im_three"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/select"
                android:layout_gravity="center"
                android:layout_margin="3dp"/>

        </LinearLayout>

    </RadioGroup>

    <Button
        android:id="@+id/bt_create_ac"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="退出活动"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/selected_button"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="quitActivity"/>


</LinearLayout>
